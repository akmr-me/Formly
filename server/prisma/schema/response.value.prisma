model ResponseValue {
    id         String   @id @default(cuid())
    responseId String
    response   Response @relation(fields: [responseId], references: [id], onDelete: Cascade)

    blockId String
    block   Block  @relation(fields: [blockId], references: [id], onDelete: Cascade)

    value String // stringify the value
    type  ValueType

    @@index([responseId])
    @@index([blockId])
}

enum ValueType {
    STRING
    NUMBER
    DATE
    JSON
}
